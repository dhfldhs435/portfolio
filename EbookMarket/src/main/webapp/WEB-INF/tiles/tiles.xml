	<definition name="company/*" extends="main-template">
		<put-attribute name="main"
			value="/WEB-INF/views/company/{1}.jsp" />
	</definition>

	<!-- 자주 묻는 질문에 대한 레이아웃 템플릿 구성 요소를 정의한다. -->
	<definition name="faqboard/*" extends="main-template">
