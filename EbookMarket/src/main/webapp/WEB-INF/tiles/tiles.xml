	</definition>

	<!-- 관리자* 창작물 리스트 페이지에 대한 레이아웃 템플릿을 정의한다. -->
	<definition name="admin/creation/*" extends="main-template">

		<put-attribute name="main"
			value="/WEB-INF/views/admin/creation/{1}.jsp"></put-attribute>
	</definition>

