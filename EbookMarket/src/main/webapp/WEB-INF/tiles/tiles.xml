	<definition name="buyEbook/*" extends="main-template">
		<put-attribute name="main"
			value="/WEB-INF/views/client/buyEbook/{1}.jsp" />
	</definition>

	<!-- 다운로드 페이지에 대한 레이아웃 템플릿 구성 요소를 정의한다. -->
	<definition name="sellerMypage/*" extends="main-template">
		<put-attribute name="main"
